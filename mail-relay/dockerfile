# mailrelay/Dockerfile
FROM node:20-alpine

# ---------- metadata ----------
LABEL org.opencontainers.image.source="your-repo-url"

WORKDIR /app
ENV NODE_ENV=production
# Allow PORT override; your server reads process.env.PORT || 4001
ENV PORT=${PORT:-4001}

# Install curl (used by healthcheck) and bash (for robust scripts)
RUN apk add --no-cache curl bash

# Copy package metadata first (for caching)
COPY package*.json ./

# Use npm ci if package-lock.json exists; otherwise fallback to npm install with legacy peer deps
RUN if [ -f package-lock.json ]; then \
      npm ci --legacy-peer-deps; \
    else \
      npm install --legacy-peer-deps; \
    fi

# Create non-root user, then copy source and set ownership
RUN addgroup -S app && adduser -S app -G app

# Copy the rest of the application
COPY . .

# Ensure the non-root user owns the app files (including node_modules from install)
RUN chown -R app:app /app

# Switch to non-root
USER app

# Expose the port (for documentation / clarity)
EXPOSE 4001

# Simple healthcheck that calls /health (curl is installed)
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
  CMD curl -f http://127.0.0.1:${PORT:-4001}/health || exit 1

# Start the app (server.js uses process.env.PORT || 4001)
CMD ["npm", "start"]
